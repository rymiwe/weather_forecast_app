# Environment variables configuration
# Rename this file to env.yml and update with your actual API keys
# Do not commit the env.yml file with real keys to public repositories

# OpenWeatherMap API key (Legacy)
# Get yours at: https://openweathermap.org/api
# Create a free account at https://home.openweathermap.org/users/sign_up
OPENWEATHERMAP_API_KEY: 'your_api_key_here'

# WeatherAPI.com API key (Recommended)
# Get yours at: https://www.weatherapi.com/
# Create a free account at https://www.weatherapi.com/signup.aspx
WEATHERAPI_KEY: 'your_api_key_here'

# Set to 'true' to use mock data for development/testing
USE_MOCK_WEATHER_CLIENT: 'false'
